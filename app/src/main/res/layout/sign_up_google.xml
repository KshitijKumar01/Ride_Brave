<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpGoogle">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="92.96dp"
        android:layout_height="92.96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <Button
        android:id="@+id/gSignInBtn"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4760FF"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="0dp"
        android:paddingBottom="8dp"
        android:text="Get Started"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="sans"
        app:cornerRadius="30dp"
        app:icon="@drawable/arrow"
        app:iconGravity="textEnd"
        app:layout_constraintTop_toBottomOf="@+id/tv_sign_in_with_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100sp"
        />





    <TextView
        android:id="@+id/tv_ride_brave"
        android:layout_width="102dp"
        android:layout_height="29dp"
        android:text="RideBrave"
        android:textColor="#373737"
        android:textSize="21.47sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="6.55dp"
                android:layout_height="11.15dp"
                android:src="@drawable/leftarrow"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="29.98dp"
                tools:layout_editor_absoluteY="40.43dp" />


            <TextView
                android:id="@+id/tv_fearlessly"
                android:layout_width="240dp"
                android:layout_height="18dp"
                android:text="Empowering women to travel fearlessly!"
                android:textColor="#373737"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ride_brave"/>

            <TextView
                android:id="@+id/tv_sign_in_with_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up With Google"
                android:textColor="#373737"
                android:textSize="23.52sp"
                android:textStyle="bold"
                android:layout_marginTop="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_fearlessly"
                />


    <TextView
        android:id="@+id/tv_already_have_account"
        android:layout_width="230dp"
        android:layout_height="18dp"
        android:text="Already have an account? Sign in now"
        android:textColor="#373737"
        android:textSize="13.35dp"
        app:layout_constraintTop_toBottomOf="@+id/gSignInBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30sp"/>

    <TextView
        android:id="@+id/tv_as_guest"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:text="Sign in as Guest"
        android:textColor="#373737"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_already_have_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

